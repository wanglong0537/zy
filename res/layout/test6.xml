<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/contact_list_buddy_item_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/tabsLayout"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/contact_list_buddy_item_bg"
        android:orientation="horizontal" >

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_back_normal"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:layout_centerInParent="true"
            android:text="即时客服"
            android:textSize="20dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/tabsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_feedback_us"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="亲，有什么可以帮助你的呢 有事请拨打电话123143"
                    android:textSize="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_feedback_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="sdf"
                    android:textSize="15dp" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout 
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <EditText 
        
            android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
         <Button 
             android:text="发送"
             android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        
    </LinearLayout>
   

</RelativeLayout>