<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabsLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/contact_list_buddy_item_bg" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_liushui_normal"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="刷卡大返现	， 快快来体验吧" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:clickable="true"
                android:onClick="showDia"
                android:background="@android:color/background_dark"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="收入" />

            <TextView
                android:clickable="true"
                android:onClick="showDia"
                android:background="@android:color/background_dark"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="支付宝" />

            <TextView
                android:clickable="true"
                android:onClick="showDia"
                android:background="@android:color/background_dark"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="支出" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:clickable="true"
                android:onClick="numClick"
                android:tag="1"
                android:textSize="20dp"
                android:id="@+id/num1_tv"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1" />

            <TextView
                android:clickable="true"
                android:onClick="numClick"
                android:tag="2"
                android:textSize="20dp"
                android:id="@+id/num2_tv"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2" />

            <TextView
                android:clickable="true"
                android:onClick="numClick"
                android:tag="3"
                android:textSize="20dp"
                android:id="@+id/num3_tv"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView 
                android:clickable="true"
                android:onClick="numClick"
                android:tag="4"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4" />

            <TextView 
                android:clickable="true"
                android:onClick="numClick"
                android:tag="5"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5" />

            <TextView 
                android:clickable="true"
                android:onClick="numClick"
                android:tag="6"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView 
                android:clickable="true"
                android:onClick="numClick"
                android:tag="7"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="7" />

            <TextView 
                android:clickable="true"
                android:onClick="numClick"
                android:tag="8"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="8" />

            <TextView 
                android:clickable="true"
                android:onClick="numClick"
                android:tag="9"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView 
                android:clickable="true"
                android:onClick="numClick"
                android:tag="."
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="." />

            <TextView 
                android:clickable="true"
                android:onClick="numClick"
                android:tag="0"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0" />

            <TextView 
                android:clickable="true"
                android:textSize="20dp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="清除" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_above="@id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/result_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="test" />
    </RelativeLayout>
</RelativeLayout>